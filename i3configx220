# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up l
set $down k
set $left j
set $right semicolon
set $mod Mod4

#background, start core programs
exec_always --no-startup-id picom --config ~/.config/picom/config -b
exec --no-startup-id feh --bg-scale ~/.i3/zuimengfinal?full.png
